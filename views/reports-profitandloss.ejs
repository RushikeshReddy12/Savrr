<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Profit and Loss Report</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <h1>Profit and Loss Report</h1>
    <p>User: <%= username %></p>

    <h3>Summary</h3>
    <ul>
      <li>Net Income: ₹ <%= netIncome.toFixed(2) %></li>
      <li>Net Expense: ₹ <%= Number(netExpense).toFixed(2) %></li>
      <li>Net Savings: ₹ <%= profitAndLoss.toFixed(2) %></li>
    </ul>

    <% if (transactions.length === 0) { %>
      <p>No transactions found.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Narration</th>
            <th>Amount (₹)</th>
          </tr>
        </thead>
        <tbody>
          <% transactions.forEach(tx => { %>
            <tr>
              <td><%= new Date(tx.timeoftransaction).toLocaleString() %></td>
              <td><%= tx.narration %></td>
              <td><%= Number(tx.amount).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <p><a href="/reports" class="btn">Back to Reports</a></p>
  </div>
</body>
</html>
